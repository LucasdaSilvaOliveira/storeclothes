@model UsuarioModel
@{
    ViewData["Title"] = "Cadastre-se em nossa plataforma!";
    Layout = "_LayoutPersonalizado";
}

<h1 class="text-secondary display-4 mb-5">Crie sua conta gratuitamente!</h1>

<form class="form-cadastro w-25" asp-controller="Cadastro" asp-action="Cadastrar" method="post">
    <div class="form-group">
        <label for="nome-pessoal">Nome pessoal</label>
        <input type="text" class="form-control" asp-for="NomePessoal" id="nome-pessoal" placeholder="Digite seu nome">
        @Html.ValidationMessageFor(item => item.NomePessoal)
    </div>
    <div class="form-group">
        <label for="nome-empresa">Nome da empresa</label>
        <input type="text" class="form-control" asp-for="NomeEmpresa" id="nome-empresa" placeholder="Digite o nome da empresa">
        @Html.ValidationMessageFor(item => item.NomeEmpresa)
    </div>
    <div class="d-flex gap-1 justify-content-around">
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" class="form-control" asp-for="Login" id="login" placeholder="Digite o login">
            @Html.ValidationMessageFor(item => item.Login)
        </div>
        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" class="form-control" asp-for="Senha" id="senha" placeholder="Digite sua senha">
            @Html.ValidationMessageFor(item => item.Senha)
        </div>
    </div>
    <button type="submit" class="btn btn-dark d-block mb-3 mt-3 w-100">Registrar</button>
    <a role="button" class="btn btn-dark d-block" asp-controller="Login" asp-action="Index">Já possui conta? Logar aqui</a>
</form>