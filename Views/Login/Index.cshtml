@model UsuarioModel
@{
    ViewData["Title"] = "Página de login";

    Layout = "_LayoutPersonalizado";
}

<div class="text-center mb-4">
	<h1 class="text-secondary">Faça login</h1>
</div>

<form class="form-cadastro w-25 m-auto" asp-controller="Login" asp-action="Logar">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" class="form-control" asp-for="Login" id="login" placeholder="Digite o login">
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" asp-for="Senha" id="senha" placeholder="Digite sua senha">
    </div>
    <button type="submit" class="btn btn-dark d-block mt-3 w-100">Logar</button>
    <div class="text-center">
		<p class="text-white">Não possui conta? <a class="text-primary" asp-controller="Cadastro" asp-action="Index">Cadastre-se</a></p>
    </div>
</form>

@if(TempData["MensagemErro"] != null) {
    <div class="alert alert-danger text-center mt-5" role="alert">
        @TempData["MensagemErro"]
    </div>
   
}